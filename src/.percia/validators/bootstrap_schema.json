{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PERCIA Bootstrap Schema v2.0",
  "type": "object",
  "required": ["protocol_version", "system_id", "governance", "agents", "cycle_policy", "objective"],
  "properties": {
    "protocol_version": {"type": "string", "pattern": "^PERCIA-[0-9]+\\.[0-9]+$"},
    "system_id": {"type": "string", "minLength": 5},
    "created_at": {"type": "string", "format": "date-time"},
    "governance": {
      "type": "object",
      "required": ["primary_governor"],
      "properties": {
        "primary_governor": {
          "type": "object",
          "required": ["human_id", "authority"],
          "properties": {
            "human_id": {"type": "string"},
            "authority": {"type": "array", "items": {"type": "string"}}
          }
        }
      }
    },
    "agents": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "required": ["ia_id", "provider", "model"],
        "properties": {
          "ia_id": {"type": "string", "pattern": "^ia-[a-z0-9-]+$"},
          "provider": {"type": "string"},
          "model": {"type": "string"}
        }
      }
    },
    "cycle_policy": {
      "type": "object",
      "required": ["max_cycles"],
      "properties": {
        "max_cycles": {"type": "integer", "minimum": 1}
      }
    },
    "objective": {
      "type": "object",
      "required": ["description", "acceptance_criteria"],
      "properties": {
        "description": {"type": "string", "minLength": 20},
        "acceptance_criteria": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"}
        }
      }
    }
  }
}
