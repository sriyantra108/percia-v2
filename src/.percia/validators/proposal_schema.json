{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PERCIA Proposal Schema v2.0",
  "type": "object",
  "required": ["author_ia", "content"],
  "properties": {
    "author_ia": {"type": "string", "pattern": "^ia-[a-z0-9-]+$"},
    "content": {
      "type": "object",
      "required": ["claim", "justification"],
      "properties": {
        "claim": {"type": "string", "minLength": 50},
        "justification": {
          "type": "array",
          "minItems": 2,
          "items": {"type": "string", "minLength": 20}
        },
        "risks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["risk", "mitigation"],
            "properties": {
              "risk": {"type": "string"},
              "mitigation": {"type": "string"}
            }
          }
        }
      }
    }
  }
}
